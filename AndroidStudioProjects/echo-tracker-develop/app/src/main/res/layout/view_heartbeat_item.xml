<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="ID: "/>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/id_text"/>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/id"
        android:text="Send Status: "/>

    <TextView
        android:id="@+id/status"

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/status_text"/>

    <TextView
        android:id="@+id/trigger_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/id_text"
        android:text="Trigger : "/>

    <TextView
        android:id="@+id/trigger"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/id_text"
        android:layout_toEndOf="@+id/trigger_text"/>

    <TextView
        android:id="@+id/timestamp_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Time stamp: "
        android:layout_below="@+id/trigger_text"/>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/trigger_text"
        android:layout_toEndOf="@+id/timestamp_text"/>


</RelativeLayout>