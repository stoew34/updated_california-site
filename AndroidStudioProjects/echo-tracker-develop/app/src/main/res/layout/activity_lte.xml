<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_collect_lte"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_raw_data_process_lte"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="processRAWData"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/btn_raw_report_lte"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/btn_collect_lte"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_all_reports_lte"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="getAllReports"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/btn_all_reports_lte"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/btn_raw_data_process_lte"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_report_lte"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="getReportInDateRange"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/btn_get_report_lte"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textCursorDrawable="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_collect_lte" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_fromdate_lte"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/magenta"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="@string/hint_to_date"
        android:inputType="date"
        android:textColor="@color/magenta"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toRightOf="@+id/btn_get_report_lte"
        app:layout_constraintTop_toBottomOf="@+id/btn_raw_data_process_lte" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_todate_lte"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/magenta"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="@string/hint_from_date"
        android:inputType="date"
        android:textColor="@color/magenta"
        android:textCursorDrawable="@null"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_fromdate_lte"
        app:layout_constraintLeft_toRightOf="@+id/et_fromdate_lte" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_hourly_trigger"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="hourlyTrigger"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/btn_hourly_trigger"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_report_lte" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_trigger_count"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/magenta"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="@string/hint_trigger_count"
        android:inputType="numberDecimal"
        android:textColor="@color/magenta"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toRightOf="@+id/btn_set_trigger_count"
        app:layout_constraintTop_toBottomOf="@+id/et_todate_lte" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_set_trigger_count"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="saveTriggerCount"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/set_trigger_count"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/btn_hourly_trigger"
        app:layout_constraintTop_toBottomOf="@+id/et_fromdate_lte" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_reports_lte"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/module_grid_bg"
        android:fadeScrollbars="false"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColor="@color/magenta"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/btn_hourly_trigger"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


