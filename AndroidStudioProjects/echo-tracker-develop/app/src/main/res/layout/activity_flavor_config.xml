<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_get_flavor_config"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@color/magenta"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="getFlavorUrls"
                    android:padding="10dp"
                    android:text="@string/btn_get_flavor_config"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_clear_flavor_config"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@color/magenta"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="clearFlavorInfo"
                    android:padding="10dp"
                    android:text="@string/btn_clear_flavor_config"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/get_flavor_info_report"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/module_grid_bg"
            android:fadeScrollbars="false"
            android:gravity="top|start"
            android:isScrollContainer="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="@color/magenta"
            android:textColorHint="@color/colorAccent"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>