<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_lte_all_log"
            android:layout_width="260dp"
            android:layout_height="36dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="26dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="getAllLog"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/get_all_lte_log"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_file_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:inputType="textMultiLine"
            android:textColor="@color/magenta"
            android:textColorHint="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_lte_all_log" />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apiVersion"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getApiVersion"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_apiVersion"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_path" />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_networkIdentity"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getNetworkIdentity"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_networkIdentity"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/btn_apiVersion"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_path" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signalCondition"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getSignalCondition"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_signalCondition"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/btn_networkIdentity"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_path" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_commonRFConfig"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getCommonRFConfig"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_commonRFConfiguration"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_apiVersion" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_uplinkInfo"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getUpLinkCarrierInfo"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_uplinkCarrierInfo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_downlinkInfo"
            app:layout_constraintLeft_toRightOf="@+id/btn_downlinkInfo" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_downlinkInfo"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getDownLinkCarrierInfo"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_downLinkCarrierInfo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            app:layout_constraintLeft_toRightOf="@+id/btn_commonRFConfig"
            app:layout_constraintTop_toBottomOf="@+id/btn_networkIdentity" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_downlinkRFConfig"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getDownLinkRFConfig"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_downLinkRFConfiguration"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_commonRFConfig" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_uplinkRFConfig"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/magenta"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="getUpLinkRFConfig"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lte_upLinkRFConfiguration"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/btn_downlinkRFConfig"
            app:layout_constraintTop_toBottomOf="@+id/btn_downlinkInfo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bearerConfig"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="getBearerConfig"
        android:text="@string/lte_bearerConfiguration"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_uplinkRFConfig"
        app:layout_constraintLeft_toRightOf="@id/btn_uplinkRFConfig" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dataSetting"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/magenta"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="getDataSetting"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/lte_dataSetting"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_downlinkRFConfig" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_logs"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            android:background="@drawable/module_grid_bg"
            android:fadeScrollbars="false"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="@color/magenta"
            android:textColorHint="@color/colorAccent"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_dataSetting"
            tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_adb_dev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:inputType="textMultiLine"
            android:text="@string/adb_lte_report"
            android:textColor="@color/magenta"
            android:textColorHint="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_logs" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:inputType="textMultiLine"
        android:text="@string/adb_lte_report_proxy"
        android:textColor="@color/magenta"
        android:textColorHint="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_adb_dev" />

</androidx.constraintlayout.widget.ConstraintLayout>